{
  "name": "smartcard-ai-extension",
  "displayName": "SmartCard AI Assistant",
  "version": "1.0.0",
  "description": "AI-powered smart card assistant for enhanced web browsing experience",
  "author": "Zijing Zhang",
  "homepage": "https://github.com/your-username/smartcard-ai-extension",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*.amazon.com/*",
      "https://*.walmart.com/*",
      "https://*.target.com/*",
      "https://*.bestbuy.com/*",
      "https://*.safeway.com/*",
      "https://*.kroger.com/*",
      "https://*.wholefoodsmarket.com/*",
      "https://*.costco.com/*",
      "https://*.macys.com/*",
      "https://*.newegg.com/*",
      "https://*.cvs.com/*",
      "https://*.walgreens.com/*",
      "https://*.doordash.com/*",
      "https://*.ubereats.com/*",
      "https://*.expedia.com/*",
      "https://*.southwest.com/*",
      "https://*.shell.com/*"
    ],
    "permissions": [
      "activeTab",
      "storage"
    ]
  }
}
